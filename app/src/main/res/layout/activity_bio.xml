<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".BioActivity">

    <EditText
        android:id="@+id/name"
        android:hint="Enter your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/details"
        android:layout_below="@+id/name"
        android:hint="Enter your Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/gender_label"
        android:layout_below="@+id/details"
        android:layout_marginTop="10dp"
        android:text="Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_below="@+id/gender_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/male"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/female"
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:id="@+id/programming_label"
        android:layout_below="@+id/gender"
        android:layout_marginTop="10dp"
        android:text="Programming Skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/programming_wraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/programming_label"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/c"
            android:text="C Programming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cpp"
            android:text="C++ Programming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/java"
            android:text="Java Programming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/android"
            android:text="Android Programming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:text="Submit"
        android:layout_below="@+id/programming_wraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>